<h1 align="center"><%= "Category " + @category.name %></h1>

<%= will_paginate @category_articles, class: "center" %>

<div class="center">
  <% if logged_in? && current_user.admin? %>
    <span class="badge">
      <%= link_to "Edit this category", edit_category_path(@category) %>
    </span>
  <% end %>
</div><br />

<%= render 'articles/article', obj: @category_articles %>

<%= will_paginate @category_articles, class: "center" %>
