<h1 align="center">All users</h1>

<%= will_paginate @users, class: "center" %>

<% @users.each do |user| %>
  <ul class="listing" style="list-style:none;">
    <div class="row">
      <div class="well col-md-4 col-md-offset-4">
        <li><%= link_to gravatar_for(user), user_path(user) %></li>
        <li class="article-title">
          <%= link_to user.username, user_path(user)%>
        </li>
        <li><small><%= pluralize(user.articles.count, "article") if user.articles.present? %></small></li>
        <% if logged_in? && current_user.admin? %>
          <li><%= link_to "delete this user", user_path(user), method: :delete, data: {confirm: "Are you sure?"}%></li>
        <% end %>
      </div>
    </div>
  </ul>
<% end %>

<%= will_paginate @users, class: "center" %>
